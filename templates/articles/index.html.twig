{% extends 'base.html.twig' %}

{% block title %}SymfArt Articles{% endblock %}

{% block body %}
    {% if articles %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Article Title</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
            <tr>
                <td>{{ article.title }}</td>
                <td>
                    <a href="/article/{{ article.id }}" class="btn btn-dark">Show</a>
                </td>
            </tr>
            </tbody>
            {% endfor %}
        </table>
    {% else %}
        <p>No Articles to display</p>
    {% endif %}
{% endblock %}